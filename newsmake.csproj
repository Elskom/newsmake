<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.0;netcoreapp2.2;netcoreapp2.1</TargetFrameworks>
    <OutputType>Exe</OutputType>
    <PackAsTool>true</PackAsTool>
    <AssemblyName>newsmake</AssemblyName>
    <LangVersion>latest</LangVersion>
    <Company>Els_kom org.</Company>
    <Authors>Els_kom org.</Authors>
    <PackageTags>newsmake</PackageTags>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/Elskom/newsmake/</RepositoryUrl>
    <PackageProjectUrl>https://github.com/Elskom/newsmake/</PackageProjectUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Copyright>Copyright (c) 2018-2019</Copyright>
    <Description>News / changelog making tool.</Description>
    <PackageReleaseNotes>Actually fixed the substring bug which caused crashes.</PackageReleaseNotes>
    <Version>1.0.5</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <NoWarn>$(NoWarn);NU5118</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <!-- Add source code. -->
    <TfmSpecificPackageFile Include="$(ProjectPath)">
      <PackagePath>src/$(ProjectName)/$(ProjectFileName)</PackagePath>
    </TfmSpecificPackageFile>
    <TfmSpecificPackageFile Include="$(ProjectDir)/$(ProjectName)/">
      <PackagePath>src/$(ProjectName)/$(ProjectName)/</PackagePath>
    </TfmSpecificPackageFile>
    <TfmSpecificPackageFile Include="$(ProjectDir)/README.md">
      <PackagePath>src/$(ProjectName)/README.md</PackagePath>
    </TfmSpecificPackageFile>
    <TfmSpecificPackageFile Include="$(ProjectDir)/stylecop.json">
      <PackagePath>src/$(ProjectName)/stylecop.json</PackagePath>
    </TfmSpecificPackageFile>
    <TfmSpecificPackageFile Include="$(ProjectDir)/global.json">
      <PackagePath>src/$(ProjectName)/global.json</PackagePath>
    </TfmSpecificPackageFile>
    <TfmSpecificPackageFile Include="$(ProjectDir)/$(ProjectName).ruleset">
      <PackagePath>src/$(ProjectName)/$(ProjectName).ruleset</PackagePath>
    </TfmSpecificPackageFile>
  </ItemGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <OutputPath>bin\Any CPU\Debug\</OutputPath>
    <DocumentationFile>bin\Any CPU\$(Configuration)\$(ProjectName).xml</DocumentationFile>
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutputPath>bin\Any CPU\Release\</OutputPath>
    <DocumentationFile>bin\Any CPU\$(Configuration)\$(ProjectName).xml</DocumentationFile>
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <None Remove=".gitignore" />
    <None Remove="appveyor.yml" />
    <None Include="LICENSE" Pack="true" Visible="false" PackagePath=""/>
    <None Remove="readme.md" />
    <None Remove="stylecop.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="StyleCop.Analyzers" Version="1.1.1-beta.61">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="2.6.3">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.CodeQuality.Analyzers" Version="2.6.3">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="IDisposableAnalyzers" Version="2.1.2">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="System.Collections">
      <Version>4.3.0</Version>
    </PackageReference>
    <PackageReference Include="System.Console">
      <Version>4.3.0</Version>
    </PackageReference>
    <PackageReference Include="System.IO.FileSystem">
      <Version>4.3.0</Version>
    </PackageReference>
    <PackageReference Include="System.Runtime">
      <Version>4.3.1</Version>
    </PackageReference>
    <PackageReference Include="System.Runtime.Extensions">
      <Version>4.3.0</Version>
    </PackageReference>
    <PackageReference Include="System.Linq">
      <Version>4.3.0</Version>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <AdditionalFiles Include="stylecop.json" />
  </ItemGroup>

</Project>
